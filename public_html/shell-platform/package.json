{
  "name": "shell-platform",
  "version": "1.0.0",
  "description": "Production-ready Shell Platform with microservices architecture",
  "private": true,
  "workspaces": [
    "backend/*",
    "backend/services/*",
    "frontend/*",
    "frontend/plugins/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:shell": "npm run dev --workspace=frontend/shell",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend/shell",
    "build:shell": "npm run build --workspace=frontend/shell",
    "build:plugins": "npm run build --workspace=frontend/plugins",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:auth": "playwright test tests/e2e/auth",
    "test:e2e:plugins": "playwright test tests/e2e/plugins",
    "test:e2e:mobile": "playwright test --project=mobile",
    "test:e2e:performance": "playwright test tests/e2e/performance",
    "test:security": "npm audit && npm run test:owasp",
    "test:owasp": "docker run --rm -v $(pwd):/zap/wrk:rw owasp/zap2docker-stable zap-baseline.py -t http://localhost -r security-report.html",
    "docker:dev": "docker-compose -f docker-compose.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:build": "docker-compose build --no-cache",
    "docker:push": "docker-compose push",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run migrate --workspace=backend/shared",
    "db:seed": "npm run seed --workspace=backend/shared",
    "db:reset": "npm run db:migrate:reset && npm run db:seed",
    "db:migrate:reset": "npm run migrate:reset --workspace=backend/shared",
    "deploy:staging": "npm run test && npm run build && npm run docker:build && ./infrastructure/scripts/deploy-staging.sh",
    "deploy:prod": "npm run test:e2e && npm run build && npm run docker:build && ./infrastructure/scripts/deploy-prod.sh",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "generate:ssl": "bash infrastructure/scripts/generate-dev-ssl.sh",
    "postinstall": "npm run generate:ssl"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "axios": "^1.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "playwright": "^1.55.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
