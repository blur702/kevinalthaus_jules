{
  "name": "{{kebabCase}}-plugin",
  "version": "{{version}}",
  "description": "{{description}}",
  "main": "dist/remoteEntry.js",
  "scripts": {
    "dev": "vite --port {{port}}",
    "build": "tsc && vite build",
    "preview": "vite preview --port {{port}}",
    {{#if linting}}
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    {{/if}}
    {{#if testing}}
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    {{/if}}
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "shell-platform",
    "plugin",
    "{{template}}",
    "micro-frontend"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.306.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@originjs/vite-plugin-federation": "^1.3.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    {{#if linting}}
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    {{/if}}
    {{#if testing}}
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    {{/if}}
    "@types/node": "^20.10.6"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "pluginConfig": {
    "category": "{{#if (eq template 'dashboard')}}dashboard{{else if (eq template 'crud')}}user-management{{else if (eq template 'settings')}}settings{{else}}productivity{{/if}}",
    "permissions": [
      {{#each permissions}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
    ],
    "features": [
      {{#each features}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
    ]
  }
}