# Environment Configuration
NODE_ENV=development

# Database Configuration
DB_USER=shellplatform
DB_PASSWORD=ChangeMeToSecurePassword123!
DB_NAME=shellplatform_db

# Redis Configuration
REDIS_PASSWORD=ChangeMeToSecureRedisPassword456!

# JWT Configuration
JWT_SECRET=ChangeThisToVeryLongRandomString789AbcDefGhiJklMnoPqrStuVwxYz
JWT_REFRESH_SECRET=AnotherVeryLongRandomStringForRefreshTokens123456789
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Service Configuration
STORAGE_TYPE=local
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
ENABLE_VIRUS_SCAN=true

# External Service Configuration
CACHE_TTL=3600
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Optional: AWS S3 Configuration (for production file storage)
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Optional: CDN Configuration
# CDN_URL=

# Query Configuration
ENABLE_QUERY_LOGGING=false
MAX_QUERY_DEPTH=5